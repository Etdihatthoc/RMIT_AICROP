# App Settings
APP_NAME=AI Crop Doctor API
APP_VERSION=1.0.0
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./database/crop_doctor.db

# AI Model
MODEL_NAME=Qwen/Qwen2.5-Omni-7B
USE_4BIT_QUANTIZATION=True
ENABLE_AUDIO_OUTPUT=False

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10

# JWT Auth
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Epidemic Detection
DBSCAN_EPS=0.05
DBSCAN_MIN_SAMPLES=5
EPIDEMIC_LOOKBACK_DAYS=7

# Expert Review
AUTO_REVIEW_THRESHOLD=0.7
